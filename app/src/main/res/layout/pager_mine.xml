<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/night_bht"
                    android:drawableLeft="@drawable/bii"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="夜间"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/night_bht"
                    android:drawableLeft="@drawable/bfc"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="签到"
                    android:textColor="#000000"
                    android:textSize="16sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/imb_login"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/night_bf1" />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/night_bf2"

                    />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/night_bf3" />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/night_bf4" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_denglu"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bhr"
                android:text="登录/注册"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_history"
                    android:background="?android:selectableItemBackground"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/bey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="历史"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_return"
                    android:background="?android:selectableItemBackground"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/night_b2f" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="跟帖"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_my_message"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:selectableItemBackground"
                android:drawableRight="@drawable/a00"
                android:text="我的消息"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/tv_my_Collection"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:selectableItemBackground"
                android:drawableRight="@drawable/a00"
                android:text="我的收藏"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_gold_renwu"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:selectableItemBackground"
                android:drawableRight="@drawable/a00"
                android:text="金币任务"
                android:gravity="left|center"


                android:textSize="18sp"
                android:textColor="#000000"
                />
            <LinearLayout
                android:id="@+id/ll_gold_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"

                android:background="?android:selectableItemBackground"
                ><!--系统提供的水波纹效果(有界/不能改颜色)-->
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="金币商城"
                    android:gravity="left|center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:drawableRight="@drawable/a00"
                    android:text="嘿你的500金币，在这里"
                    android:gravity="right|center"
                    android:textSize="16sp"
                    android:textColor="#ef1f1f"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_jd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:background="?android:selectableItemBackground"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="京东特供"
                    android:gravity="left|center"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:drawableRight="@drawable/a00"
                    android:text="新人领118元红包"
                    android:gravity="right|center"
                    android:textSize="16sp"
                    android:textColor="#c1c1c1"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_my_money"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/a00"
                android:text="我的钱包"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="?android:selectableItemBackground"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/ll_free"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/a00"
                android:text="免流量看新闻"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="?android:selectableItemBackground"

                />
            <TextView
                android:id="@+id/tv_code"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/a00"
                android:text="扫一扫"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="?android:selectableItemBackground"

                />
            <TextView
                android:id="@+id/tv_setting"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/a00"
                android:text="设置"
                android:gravity="left|center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="?android:selectableItemBackground"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
