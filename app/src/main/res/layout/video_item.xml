<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    style="@style/card_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/video_thumbnail_placeholder_color"
            android:orientation="vertical">

            <com.volokh.danylo.video_player_manager.ui.VideoPlayerView
                android:id="@+id/player"
                android:layout_above="@id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/cover"
                android:layout_above="@id/title"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/title"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="25dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_toLeftOf="@id/im_2"
                    android:background="@drawable/atr"/>
                <ImageView
                    android:id="@+id/im_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ak2"
                    android:layout_toLeftOf="@id/im_1"/>
                <ImageView
                    android:id="@+id/im_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ajk"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/visibility_percents"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="22.5sp"
                style="@style/BaseText"/>
        </RelativeLayout>



</android.support.v7.widget.CardView>
